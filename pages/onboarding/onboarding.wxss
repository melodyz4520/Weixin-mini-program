/* pages/onboarding/onboarding.wxss */
/* 标题: #1A2E6B, 副标题: #606060 */
/* Tutor: #1A2E6B / #D6EEF6, Student: #FF9900 / #FFF2CC */
/* 微信按钮: #2ECC71, 隐私链接: #50A0B0 */

page {
  height: 100%;
  background: #E8E4F0;
}

.page {
  min-height: 100vh;
  position: relative;
  box-sizing: border-box;
}

/* 背景图：使用 image.png 铺满屏幕，最底层 */
.bg-image {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* 半透明遮罩，保证前景文字可读，同时保留背景质感 */
.bg-overlay {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.25);
  z-index: 0;
  pointer-events: none;
}

.scrollarea {
  position: relative;
  z-index: 1;
  height: 100vh;
}

/* 顶部留出状态栏+微信胶囊，左右对称内边距使整页 UI 居中 */
.content {
  padding-top: calc(env(safe-area-inset-top) + 120rpx);
  padding-left: 48rpx;
  padding-right: 48rpx;
  padding-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  min-height: 100%;
  box-sizing: border-box;
  width: 100%;
}

/* ---------- Header ---------- */
.header {
  text-align: center;
  margin-bottom: 56rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-row {
  display: flex;
  align-items: baseline;
  justify-content: center;
  flex-wrap: wrap;
}

.title {
  font-size: 40rpx;
  color: #1A2E6B;
  line-height: 1.4;
}

.title--bold {
  font-size: 48rpx;
  font-weight: bold;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #606060;
  margin-top: 16rpx;
  text-align: center;
}

/* ---------- Cards ---------- */
.cards {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
  flex: 1;
}

.card {
  width: 100%;
  max-width: 620rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 44rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.card__icon-wrap {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.card__icon-wrap--tutor {
  background: #D6EEF6;
}

.card__icon-wrap--student {
  background: #FFF2CC;
}

.card__icon {
  width: 56rpx;
  height: 56rpx;
}

.card__icon--img {
  width: 56rpx;
  height: 56rpx;
}

.card__title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
  text-align: center;
}

.card__desc {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
  text-align: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.card__cta {
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
}

.card__cta--tutor {
  color: #1A2E6B;
}

.card__cta--student {
  color: #FF9900;
}

/* ---------- Bottom ---------- */
.bottom {
  width: 100%;
  max-width: 620rpx;
  margin-top: auto;
  margin-left: auto;
  margin-right: auto;
  padding-top: 48rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 32rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.btn-login {
  width: 100%;
  max-width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: #2ECC71;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
  text-align: center;
  display: block;
}

.btn-login::after {
  border: none;
}

.privacy {
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}

.privacy__text {
  font-size: 24rpx;
  color: #606060;
}

.privacy__link {
  font-size: 24rpx;
  color: #50A0B0;
}
