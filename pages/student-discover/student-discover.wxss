.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.header {
  padding-top: env(safe-area-inset-top);
  background: #fff;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  min-height: 88rpx;
}

.header__back {
  position: absolute;
  left: 24rpx;
  top: env(safe-area-inset-top);
  bottom: 0;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  font-size: 40rpx;
  color: #333;
}

.header__title {
  font-size: 34rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 24rpx;
  gap: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  background: #f0f0f0;
  border-radius: 12rpx;
}

.tab--active {
  background: #1A2E6B;
  color: #fff;
}

.search-wrap {
  display: flex;
  align-items: center;
  background: #fff;
  margin: 0 24rpx 24rpx;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  border: 1rpx solid #eee;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.scroll {
  height: calc(100vh - 280rpx);
}

.tutor-list {
  padding: 0 24rpx 24rpx;
}

.tutor-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.tutor-card__left {
  flex: 1;
  display: flex;
  min-width: 0;
}

.tutor-card__avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #e8e8e8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.tutor-card__info {
  flex: 1;
  min-width: 0;
}

.tutor-card__name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.tutor-card__meta {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.tutor-card__rating {
  margin-bottom: 8rpx;
}

.star {
  color: #f5a623;
  font-size: 24rpx;
}

.rating {
  font-size: 24rpx;
  color: #666;
}

.rating-new {
  font-size: 24rpx;
  color: #999;
}

.tutor-card__tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.tag {
  font-size: 22rpx;
  color: #666;
  background: #f0f0f0;
  padding: 6rpx 14rpx;
  border-radius: 8rpx;
}

.tutor-card__free {
  font-size: 22rpx;
  color: #999;
}

.tutor-card__right {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}

.btn-book {
  padding: 18rpx 28rpx;
  font-size: 26rpx;
  background: #1A2E6B;
  color: #fff;
  border-radius: 12rpx;
  border: none;
}

.btn-book::after {
  border: none;
}

.btn-book--disabled {
  background: #ccc;
  color: #fff;
}

.section {
  padding: 24rpx;
  background: #fff;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  margin: 0 24rpx 24rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.subject-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.subject-card {
  width: calc(50% - 10rpx);
  border-radius: 16rpx;
  padding: 28rpx;
  box-sizing: border-box;
}

.subject-icon {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1A2E6B;
  margin-bottom: 12rpx;
}

.subject-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.subject-count {
  font-size: 24rpx;
  color: #666;
}

.course-list {
  margin-top: 16rpx;
}

.course-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.course-row:last-child {
  border-bottom: none;
}

.course-row__left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.course-tag {
  width: 72rpx;
  padding: 10rpx 0;
  text-align: center;
  background: #f0f0f0;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.course-info {
  flex: 1;
  min-width: 0;
}

.course-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.course-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.course-online {
  font-size: 22rpx;
  color: #07c160;
}

.btn-view {
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  color: #fff;
  background: #1A2E6B;
  border-radius: 12rpx;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  padding-bottom: env(safe-area-inset-bottom);
  background: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.tabbar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 40rpx;
}

.tabbar-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.tabbar-item--active .tabbar-icon,
.tabbar-item--active .tabbar-text {
  color: #1A2E6B;
}

.tabbar-text {
  font-size: 22rpx;
  color: #999;
}
