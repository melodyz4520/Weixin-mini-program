.page { min-height: 100vh; background: #f5f5f5; }
.header { padding-top: env(safe-area-inset-top); background: #fff; border-bottom: 1rpx solid #eee; display: flex; align-items: center; justify-content: center; position: relative; min-height: 88rpx; }
.header__back { position: absolute; left: 24rpx; top: env(safe-area-inset-top); bottom: 0; display: flex; align-items: center; padding: 0 24rpx; font-size: 40rpx; color: #333; }
.header__title { font-size: 34rpx; font-weight: bold; color: #1a1a1a; }
.content { padding: 48rpx; text-align: center; }
.avatar-wrap { width: 160rpx; height: 160rpx; margin: 0 auto 24rpx; border-radius: 50%; background: #e8e8e8; display: flex; align-items: center; justify-content: center; font-size: 72rpx; }
.nickname { display: block; font-size: 32rpx; font-weight: bold; color: #333; margin-bottom: 48rpx; }
.menu-item { padding: 28rpx; background: #fff; border-radius: 12rpx; margin-bottom: 20rpx; font-size: 28rpx; color: #1A2E6B; }
