.page {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  box-sizing: border-box;
}

.content {
  width: 100%;
  max-width: 560rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 64rpx 48rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.icon-wrap {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 32rpx;
  border-radius: 50%;
  background: #1A2E6B;
  color: #fff;
  font-size: 64rpx;
  line-height: 120rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 48rpx;
}

.btn-back {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #1A2E6B;
  color: #fff;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: none;
}

.btn-back::after {
  border: none;
}
